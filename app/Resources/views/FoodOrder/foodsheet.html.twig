{# @var food \AppBundle\Entity\Food #}

{% extends 'FoodOrder/baseform.html.twig' %}

{% block orderbody %}
    <table class="table">
        <tr><th>Available:</th><td>
                {% if food.getAvailable() %}
                    YES
                {% else %}
                    NO
                {% endif %}
            </td></tr>
        <tr><th>Name:</th><td> {{ food.getName() }} </td></tr>
        <tr><th>Cost:</th><td> {{ food.getCost() }} </td></tr>
        <tr><th>Description:</th><td> {{ food.getDescription() }} </td></tr>
    </table>
{% endblock %}