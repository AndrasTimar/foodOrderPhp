{% extends 'base.html.twig' %}

{% block title %}
    Food Ordering App
{% endblock %}

{% block body %}
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path("foods") }}">Food Ordering</a>
            </div>
            <ul class="nav navbar-nav">
        {% if not loggedIn %}
            <li><a href="{{ path('login') }}"> Log in</a></li>
            <li><a href="{{ path('register') }}"> Register </a></li>
        {% else %}
            {% if admin %}
                <li><a href="{{ path('add_admin') }}"> Add Administrator</a></li>
                <li><a href="{{ path('manageorders') }}"> Manage Orders </a></li>

            {% endif %}
            <li><a href="{{ path('foods') }}">Menu</a></li>
            <li><a href="{{ path('cart') }}">Cart</a></li>
            <li><a href="{{ path('listorders') }}">See my orders</a></li>
            <li><a href="{{ path('address_list') }}">My Addresses</a></li>
            <li><a href="{{ path('account') }}">Account</a></li>
            <li><a href="{{ path('logout') }}">Logout</a></li>
        {% endif %}
            </ul>
        </div>
    </nav>
    {% for flash_message in app.session.flashbag.get('notice') %}
        <div class="alert alert-info">
            {{ flash_message }}
        </div>
    {% endfor %}

    {% block orderbody %}{% endblock %}

    <hr />
{% endblock %}